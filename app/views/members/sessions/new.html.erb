<div class="container">
  <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
    <div class="panel panel-info" >
      <div class="panel-heading">
        <div class="panel-title">Sign In</div>
        <div style="float:right; font-size: 80%; position: relative; top:-10px"><%= link_to "Forgot password?", new_password_path(resource_name) %></div>
      </div>
      <div style="padding-top:30px" class="panel-body" >
        <% flash.each do |message_type, message| %>
          <%= content_tag 'div', class: "alert alert-danger alert-dismissible show", role: 'alert' do %>
            <%= message %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          <% end %>
        <% end %>
        <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html:{class:"form-horizontal", role:"form"}) do |f| %>
          <div style="margin-bottom: 25px" class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"Email" %>
          </div>
          <div style="margin-bottom: 25px" class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
            <%= f.password_field :password, autocomplete: "current-password", class:"form-control", placeholder:"Password" %>
          </div>
          <div class="input-group">
            <div class="checkbox">
              <label>
                <%= f.check_box :remember_me %> Remember me
              </label>
            </div>
          </div>
          <div style="margin-top:10px" class="form-group">
            <!-- Button -->
            <div class="col-sm-12 controls">
              <%= f.submit "Log in", class:"btn btn-success" %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-md-12 control">
              <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%" >
                Don't have an account!
                <%= link_to "Sign up here", new_registration_path(resource_name) %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
