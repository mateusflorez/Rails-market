<h1 class="mt-4 mb-4">Categories</h1>
<hr>
<%= render 'backoffice/shared/alert' %>
<!-- Table -->
<div class="panel panel-default mt-4">
  <%= link_to "New category", new_backoffice_category_path, class: "btn btn-success mb-4" %>
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>#</th>
            <th>Description</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= category.id %></td>
              <td><%= category.description %></td>
              <td style="width: 150px" class="text-center">
                <%= link_to edit_backoffice_category_path(category), class: "btn btn-primary" do %>
                  <i class="fas fa-edit"></i>
                <% end %>
                &nbsp &nbsp
                <%= link_to "#", class: "btn btn-danger" do %>
                  <i class="fas fa-trash"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<!-- Table end -->
