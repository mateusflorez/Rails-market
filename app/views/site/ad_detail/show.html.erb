<section class="py-5">
  <div class="container px-4 px-lg-5 my-5">
    <div class="row gx-4 gx-lg-5 align-items-center">
      <div class="col-md-6"><%= image_tag @ad.picture.url(:large), class: 'card-img-top mb-5 mb-md-0' %></div>
      <div class="col-md-6">
        <h1 class="display-5 fw-bolder"><%= @ad.title %></h1>
        <div class="fs-5 mb-5">
          <span><%= humanized_money_with_symbol @ad.price %></span>
        </div>
        <p class="lead"><%= md_to_html(@ad.description) %></p>
        <div class="d-flex">
          <input class="form-control text-center me-3" id="inputQuantity" type="num" value="1" style="max-width: 3rem" />
          <button class="btn btn-outline-dark flex-shrink-0" type="button">
            <i class="bi-cart-fill me-1"></i>
            Add to cart
          </button>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- Related items section-->
<section class="py-5 bg-light">
  <div class="container px-4 px-lg-5 mt-5">
    <h2 class="fw-bolder mb-4">Related products</h2>
    <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
      <% @ads.each do |ad| %>
        <div class="col mb-5">
          <div class="card h-100">
            <!-- Product image-->
            <%= image_tag ad.picture.url(:medium), class: 'card-img-top' %>
            <!-- Product details-->
            <div class="card-body p-4">
              <div class="text-center">
                <!-- Product name-->
                <h5 class="fw-bolder"><%= link_to truncate(ad.title, length: 20), site_ad_detail_path(ad), style: "text-decoration: none; color: #000000" %></h5>
                <!-- Product reviews-->
                <div class="d-flex justify-content-center small text-muted mb-2">
                  <%= truncate(ad.description, length: 100) %>
                </div>
                <!-- Product price-->
                <%= humanized_money_with_symbol ad.price %>
              </div>
            </div>
            <!-- Product actions-->
            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
              <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="#">Add to cart</a></div>
            </div>
          </div>
        </div>
      <% end %>
      <div class="ratings">
        <p class="pull-right"></p>
      </div>
    </div>
    <div class="card">
      <h5 class="card-header"><a class="btn btn-success">Leave a Review</a></h5>
      <div class="card-body">
        <div class="row">
          <div class="col-md-12">
            Anonymous
            <span style="float:right">10 days ago</span>
            <p>This product was great in terms of quality. I would definitely buy another!</p>
          </div>
        </div>
        <hr>
        <div class="row">
          <div class="col-md-12">
            Anonymous
            <span style="float:right">10 days ago</span>
            <p>This product was great in terms of quality. I would definitely buy another!</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</section>
