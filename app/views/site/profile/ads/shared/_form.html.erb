<%= form_for([:site, :profile, @ad], html: { multipart: true }) do |f| %>
  <div class="row mb-3">
    <div class="col-sm-6">
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class:"form-control", placeholder:"Title" %>
      </div>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-sm-4">
      <div class="form-group">
        <%= f.label :category %>
        <%= f.collection_select :category_id, Category.all, :id, :description, {}, class:"form-control" %>
      </div>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-sm-2">
      <div class="form-group">
        <%= f.label :price %>
        <div class="input-group">
          <span class="input-group-text"><%= @ad.price.currency.symbol %></span>
          <%= f.text_field :price, class:"form-control", placeholder:"Price" %>
        </div>
      </div>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-sm-2">
      <div class="form-group">
        <%= f.label :finish_date %>
        <%= f.date_field :finish_date, class:"form-control" %>
      </div>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-sm-6">
      <div class="form-group">
        <%= f.label :picture %><br>
        <% if @ad.picture.present? %>
          <%= image_tag @ad.picture.url(:medium), class:"img-thumbnail" %>
        <% end %>
        <%= f.file_field :picture, class:"btn"  %>
      </div>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-sm-6">
      <div class="form-group">
        <%= f.label :short_description %>
        <%= f.text_area :description_short, class:"form-control", rows:3 %>
      </div>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-sm-12">
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description_md, class:"form-control", rows:6 %>
      </div>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-sm-12">
      <div class="card card-primary">
        <h5 class="card-header">Preview</h5>
        <div class="card-body">
          <%= @ad.description.html_safe %>
        </div>
      </div>
    </div>
  </div>
  <%= submit_tag "Submit", class:"btn btn-primary" %>
<% end %>
