<h1 class="mt-4">Editing ad</h1>

<%= form_for([:site, :profile, @ad]) do |f| %>
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <%= f.label :title %>
                <%= f.text_field :title, class:"form-control", placeholder:"Title" %>
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
<% end %>
