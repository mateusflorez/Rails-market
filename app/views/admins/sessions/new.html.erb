<body class="bg-primary">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Login</h3></div>
                                <div class="card-body">
                                    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                                    <form>
                                        <div class="form-floating mb-3">
                                            <%= f.email_field :email, autofocus: true, type: "email", class: "form-control", autocomplete: "email", placeholder: "name@example.com" %>
                                            <label for="inputEmail">Email address</label>
                                        </div>
                                        <div class="form-floating mb-3">
                                            <%= f.password_field :password, autofocus: true, type: "password", class: "form-control", autocomplete: "current-password", placeholder: "Password" %>
                                            <label for="inputPassword">Password</label>
                                        </div>
                                        <% if devise_mapping.rememberable? %>
                                          <div class="form-check mb-3">
                                              <%= f.check_box :remember_me, type: "checkbox", class: "form-check-input", placeholder: "Password" %>
                                              <label class="form-check-label" for="inputRememberPassword">Remember Password</label>
                                          </div>
                                        <% end %>
                                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                            <%= link_to "Forgot Password?", new_password_path(resource_name), class: "small" %>
                                            <%= f.submit "Log in", class: "btn btn-primary" %>
                                        </div>
                                    </form>
                                    <% end %>
                                </div>
                                <div class="card-footer text-center py-3">
                                    <div class="small"><%= link_to "Need an account? Sign up!", new_registration_path(resource_name), class: "small" %></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        <div id="layoutAuthentication_footer">
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; Your Website 2022</div>
                        <div>
                            <a href="#">Privacy Policy</a>
                            &middot;
                            <a href="#">Terms &amp; Conditions</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="js/scripts.js"></script>
</body>
